<section class="ad-hero">
  <div class="ad-hero-content">
    <h1>{{ section.settings.heading }}</h1>
    <p>{{ section.settings.subheading }}</p>
    <a href="{{ section.settings.button_link }}" class="ad-btn">{{ section.settings.button_label }}</a>
  </div>
</section>

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "Effortless Motion" },
    { "type": "text", "id": "subheading", "label": "Subheading", "default": "Elevated everyday activewear for movement and rest." },
    { "type": "text", "id": "button_label", "label": "Button Label", "default": "Shop Now" },
    { "type": "url", "id": "button_link", "label": "Button Link", "default": "/collections/all" }
  ],
  "presets": [{ "name": "Hero Banner" }]
}
{% endschema %}
